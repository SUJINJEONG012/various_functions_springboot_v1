<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.various_functions.admin.mapper.NoticeFileMapper">

	<!-- notice_file 전체칼럼 -->
	<sql id="fileColumns">
		file_id,
		notice_id,
		original_name,
		save_name,
		size,
		delete_yn,
		created_date,
		deleted_date
	</sql>
	
	<!-- 파일정보 저장 -->
	<insert id="noticeFilesaveAll" parameterType="list">
		insert into notice_file (
		<include refid="fileColumns"/>
		)values 
		<foreach item="file" collection="list" separator=",">
			(
			#{file.fileId},
			#{file.noticeId},
			#{file.originalName},
			#{file.saveName},
			#{file.size},
			0,
			now(),
			null
			)
		</foreach>
	</insert>
	
	<!-- 파일저장 -->
	<insert id="noticeFileSave" parameterType="com.various_functions.admin.dto.NoticeFileDto">
	insert into notice_file (
		<include refid="fileColumns"/>
		)values (
			#{fileId},
			#{noticeId},
			#{originalName},
			#{saveName},
			#{size},
			0,
			now(),
			null
		)
	</insert>
	
	<!-- 공지사항 id를 기반으로 파일정보 조회 -->
	<select id="findFilesByNoticeId" parameterType="Long" resultType="com.various_functions.admin.dto.NoticeFileDto">
		select file_id, notice_id, original_name, save_name, size
		from notice_file
		where notice_id= #{noticeId}
	</select>
	

</mapper>