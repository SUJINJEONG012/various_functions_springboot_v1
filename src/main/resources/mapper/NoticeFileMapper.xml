<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.various_functions.admin.mapper.NoticeFileMapper">

	<!-- notice_file 전체칼럼 -->
	<sql id="fileColumns">
		file_id,
		notice_id,
		original_name,
		save_name,
		size,
		delete_yn,
		created_date,
		deleted_date
	</sql>

	<!-- 파일정보 저장 -->
	<insert id="saveAll" parameterType="list">
		insert into notice_file (
		<include refid="fileColumns" />
		)values
		<foreach item="file" collection="list" separator=",">
			(
			#{file.fileId},
			#{file.noticeId},
			#{file.originalName},
			#{file.saveName},
			#{file.size},
			0,
			now(),
			null
			)
		</foreach>
	</insert>

	<!-- 파일저장 -->
	<insert id="noticeFileSave"
		parameterType="com.various_functions.admin.dto.NoticeFileDto">
		insert into notice_file (
		<include refid="fileColumns" />
		)values (
		#{fileId},
		#{noticeId},
		#{originalName},
		#{saveName},
		#{size},
		0,
		now(),
		null
		)
	</insert>

	<!-- 공지사항 id를 기반으로 파일정보 조회 -->
	<select id="findFilesByNoticeId" parameterType="Long"
		resultType="com.various_functions.admin.vo.NoticeFileVo">
		select
		<include refid="fileColumns" />
		from notice_file
		where notice_id= #{noticeId}
	</select>

	<!-- 파일리스트 조회 -->
	<select id="findAllByIds" parameterType="list"
		resultType="com.various_functions.admin.vo.NoticeFileVo">
		select
		<include refid="fileColumns" />
		from notice_file
		where delete_yn=0
		and file_id in
		<foreach item="noticeId" collection="list" open="("
			separator="," close=")">
		</foreach>
		order by file_id
	</select>
	
	<!-- 파일수정 -->
	<update id="updateFile" parameterType="com.various_functions.admin.vo.NoticeFileVo">
		update notice_file
		set <include refid="fileColumns" />
		where file_id= #{file_id}
	</update>
	

	<!-- 파일삭제 -->
	<delete id="deleteAllByIds" parameterType="list">
		update notice_file
		set
		delete_yn =1, deleted_date= now()
		where
		file_id in
		<foreach item="fileId" collection="list" open="("
			separator="," close=")">
			#{fileId}
		</foreach>
	</delete>
	
	<!-- 파일 삭제 메서드 정의 -->
<delete id="deleteById" parameterType="java.lang.Long">
    DELETE FROM notice_file WHERE file_id = #{file_id}
</delete>


	<!-- 파일 상세정보 조회 -->
    <select id="findById" parameterType="Long" resultType="com.various_functions.admin.vo.NoticeFileVo">
        SELECT
            <include refid="fileColumns" />
        FROM
            notice_file
        WHERE
            delete_yn = 0
            AND file_id = #{fileId}
    </select>




</mapper>