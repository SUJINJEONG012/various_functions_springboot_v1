<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.various_functions.admin.mapper.ReservationMapper">

    <!-- 예약 삽입 -->
    <insert id="insertReservation">
        INSERT INTO reservation (
            rordernum,
            ramount,
            rroomnum,
            rcheckin,
            rcheckout,
            rresname,
            rresphone,
            rresemail,
            member_id,
            room_id
        ) VALUES (
            #{rordernum},
            #{ramount},
            #{rroomnum},
            #{rcheckin},
            #{rcheckout},
            #{rresname},
            #{rresphone},
            #{rresemail},
            #{memberId},
            #{roomId}
        )
    </insert>
    
    
 	<!-- 특정 회원의 예약 목록 조회 -->
    <select id="getReservationsByMemberId" resultType="Reservation">
        SELECT * FROM reservation WHERE member_id = #{memberId}
    </select>

    <!-- 특정 방의 예약 목록 조회 -->
    <select id="getReservationsByRoomId" resultType="Reservation">
        SELECT * FROM reservation WHERE room_id = #{roomId}
    </select>

    
    
</mapper>